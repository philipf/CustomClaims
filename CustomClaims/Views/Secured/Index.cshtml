@using System.Security.Claims
<h2>Secure page</h2>
<p>You have to be authenticated to see this page.</p>
<br />
<p>Is authenticated: @User.Identity.IsAuthenticated</p>
<p>Name: @User.Identity.Name</p>
<br />
<table class="table">
    <tr>
        <th>Type</th>
        <th>Value</th>
    </tr>
    @foreach (Claim claim in ViewBag.Claims)
    {
        <tr>
            <td>@claim.Type</td>
            <td>@claim.Value</td>
        </tr>
    }
</table>
<br />

<h3>Add claim</h3>
@using (Html.BeginForm())
{
    <p>Claim:</p>
    <p>@Html.TextBox("claim")</p>
    <p>
        <button type="submit" class="btn btn-default">Add claim</button>
    </p>
    
}
